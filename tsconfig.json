{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"lib": ["ES2022"],
		"moduleResolution": "node",
		"allowJs": false,
		"checkJs": false,
		"strict": true,
		"noImplicitAny": false,
		"baseUrl": ".",
		"typeRoots": ["./types", "./node_modules/@girs"],
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src", "types"]
	// "exclude": ["node_modules/@types/**"]
}
